<div class='container '>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead></thead>
          <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>メンバー</th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <tr>
            <%#なぜか画像でない<td><%= image_tag(@group, :group_image, size: '50x50', fallback: "no-image-icon.jpg") %></td>
          <td><%= @group.group_name %></td>
          <td><%= @group.introduction %></td>
          <%#6/7メンバー一覧追記%>
          <td>
          <% @group.users.each do |member| %>
          <%= member.name %><br>
          <% end %>
          <%#6/7ここまで%>
          <td>
            <% if @group.owner_id == current_user.id %>
              <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
          <%#6/7メンバー追加機能と削除機能追加%>
              <% elsif @group.users.include?(current_user) %>
                <%= link_to 'Leave this group', group_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
              <% else %>
                <%= link_to 'Join this group', group_join_path(@group), class: "btn btn-sm btn-success" %>
          <%#6/7ここまで%>
           <% end %>
          </td>
         </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>